<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_work_order_wizard" model="ir.ui.view">
            <field name="name">Report Work Order</field>
            <field name="model">zdg_dashboard.work.order.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Report Work Order">
					<group>
						<field name="date_from"/>
						<field name="date_to"/>
					</group>
                    <group>
<!--                         <field name="state" widget="many2many_tags" options="{'no_create': True}"/> -->
                        <field name="with_details"/>
                        <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                    </group>
					<footer>
						<button name="get_wizard_values" string="Get Report" type="object" class="oe_highlight"/>
						<button string="Cancel" class="btn btn-secondary" special="cancel"/>
					</footer>
				</form>
            </field>
        </record>

        <record id="action_wizard_work_order"
            model="ir.actions.act_window">
            <field name="name">Service Order</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">zdg_dashboard.work.order.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_work_order_wizard" />
            <field name="target">new</field>
            <!-- <field name="binding_model_id"
                ref="account.model_account_account" />
            <field name="binding_type">report</field> -->
        </record>
        
        <menuitem id="menu_dashboard_work_order" name="Work Order"
    		parent="menu_dashboard_production"
			sequence="3"
    		action="action_wizard_work_order"
    		groups="service.group_service_manager"/>

    </data>
</odoo>