<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <!-- Main template -->
    <template id="sparepart_request">
      <t t-call="web.html_container">
        <t t-foreach="docs"  t-as="o">
          <t t-call="work.sparepart_request_document" t-lang="o.partner_id.lang"/>
        </t>
      </t>
    </template>

    <!-- Translatable template -->
    <template id="sparepart_request_document">
      <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
      <!-- <t t-call="web.external_layout"> -->
        <div class="page">
          <div class="oe_structure"/>
          <h3 class="text-center">
            <span>SURAT PERMINTAAN BARANG</span>
          </h3>

          <div class="row">
            <span>Here goes Information section</span>
          </div>

          <!-- Looping item content -->
          <table class="table o_main_table">
            <thead>
              <tr>
                <th></th>
                <th>Parts Number</th>
                <th>Description</th>
                <th>Qty DMD</th>
                <th>Qty Sup</th>
                <th>Remark</th>
              </tr>
            </thead>
            <tbody>
              <t t-if="o.operations">
                <t t-set="i" t-value="0"/>
                <tr t-foreach="o.operations" t-as="line">
                  <td><span t-esc="i + 1"/></td>
                  <td><span t-field="line.part_number"/></td>
                  <td><span t-field="line.name"/></td>
                  <td><span t-field="product_uom_qty"/></td>
                  <td></td>
                  <td></td>
                </tr>
              </t>
            <tbody>
            </tbody>
          </table>

          <div class="row">
            <div class="col-3">
              <span>Pemohon</span>
              <div height="100px"/>
              <span>....</span>
            </div>
            <div class="col-3">
              <span>Disetujui</span>
              <div height="100px"/>
              <span>Ka. Bengkel</span>
            </div>
            <div class="col-3">
              <span>Disiapkan</span>
              <div height="100px"/>
              <span>Gudang</span>
            </div>
            <div class="col-3">
              <span>Diterima</span>
              <div height="100px"/>
              <span></span>
            </div>
          </div>

          <div class="oe_structure"/>
        </div>
      <!-- </t> -->
    </template>

  </data>
</odoo>
