<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <!-- Main template -->
    <template id="sparepart_request">
      <t t-call="web.html_container">
        <t t-foreach="docs"  t-as="o">
          <t t-call="work.sparepart_request_document" t-lang="o.partner_id.lang"/>
        </t>
      </t>
    </template>

    <!-- Translatable template -->
    <template id="sparepart_request_document">
      <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
      <!-- <t t-call="web.external_layout"> -->
        <div class="page">
          <div class="oe_structure"/>
          <h3 class="text-center">
            <span>SPAREPART REQUEST</span>
          </h3>

          <div class="row">
            <span>Here goes Information section</span>
          </div>

          <!-- Looping item content -->
          <table class="table">
          </table>
          <div class="oe_structure"/>
        </div>
      <!-- </t> -->
    </template>
    
  </data>
</odoo>
