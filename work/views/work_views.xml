<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="view_work_order_tree" model="ir.ui.view">
      <field name="name">work.tree</field>
      <field name="model">service.order</field>
      <field name="arch" type="xml">
        <tree string="Work Order" decoration-muted="state in ('done','cancel')" decoration-info="state=='draft'">
        <!-- <tree string="Work Order"> -->
          <field name="name"/>
          <field name="company_id" groups="base.group_multi_company" invisible="1"/>
          <field name="register_date"/>
          <field name="claim_reference"/>
          <field name="equipment_id"/>
          <field name="insurance_id"/>
          <field name="claim_id"/>
          <field name="state"/>
          <field name="received_date"/>
          <field name="planned_date"/>
          <field name="work_stage"/>
        </tree>
      </field>
    </record>

    <record id="view_work_order_form" model="ir.ui.view">
      <field name="name">service.form</field>
      <field name="model">service.order</field>
      <field name="priority" eval="1"/>
      <field name="arch" type="xml">
        <form string="Work Order">
          <header>
            <button name="action_service_start" attrs="{'invisible': ['&amp;', ('state', '!=', 'confirmed'), '!', '&amp;', ('state', '=', 'ready'), ('invoice_method', '=', 'b4repair')]}" type="object" string="Start Repair" class="oe_highlight"/>
            <!-- <button name="action_service_cancel_draft" states="cancel" string="Set to Draft" type="object"/> -->
            <button name="action_service_cancel_draft" states="under_repair" string="Set to Draft" type="object"/>
            <!-- <button name="action_service_start" attrs="{'invisible': ['&amp;', ('state', '!=', 'confirmed'), '!', '&amp;', ('state', '=', 'ready')]}" type="object" string="Start Repair" class="oe_highlight"/> -->
            <button name="action_print_sparepart_request" states="under_repair" string="Req. Sparepart" type="object"/>
            <button name="action_print_consumable_request" states="under_repair" string="Req. Consumables" type="object"/>
            <button name="action_service_end" states="under_repair" string="End Repair" type="object" class="oe_highlight"/>
            <button name="action_create_sparepart_transfer" states="2binvoiced" string="Receive Sparepart" type="object"/>
            <button name="action_create_consumable_transfer" states="2binvoiced" string="Receive Consumables" type="object"/>
            <button name="action_create_purchase_fee" states="2binvoiced" string="Create PO" type="object"/>
            <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,under_repair,repaired,done"/>
          </header>
          <sheet>
            <div class="oe_button_box" name="button_box">
            </div>
            <label for="name"/>
            <h1>
              <field name="name"/>
            </h1>
            <group>
              <group>
                <field name="company_id" attrs="{'readonly': 1}"/>
                <field name="bill_type" attrs="{'readonly': 1}"/>
                <field name="claim_reference" attrs="{'readonly': 1}"/>
                <field name="claim_id" attrs="{'readonly': 1}"/>
                <field name="policy_no" attrs="{'readonly': 1}"/>
                <field name="insurance_id"/>
                <field name="partner_id"/>
              </group>
              <group>
                <field name="equipment_id"/>
                <field name="planned_date" attrs="{'readonly': 1}"/>
                <field name="received_date" required="True"/>
                <field name="work_stage"/>
                <field name="finish_date"/>
                <field name="vendor_id" string="Repair Vendor" domain="[('supplier', '=', True)]"/>
                <field name="purchase_id"/>
                <field name="sparepart_picking_id"/>
                <field name="consumable_picking_id"/>
                <field name="invoice_method" invisible="1"/>
              </group>
            </group>
            <notebook>
              <page string="Spareparts">
                <field name="operations" attrs="{'readonly':[('state', 'not in', ('confirmed', 'under_repair', 'ready'))]}">
                  <form string="Sparepartsss">
                    <notebook>
                      <page string="Sparepart Line">
                        <group>
                          <group>
                            <field name="supply_type"/>
                            <field name="product_id"/>
                            <field name="name"/>
                            <field name="part_number"/>
                            <label for="product_uom_qty"/>
                            <div class="o_row">
                              <field name="product_uom_qty"/>
                              <field name="product_uom" groups="uom.group_uom"/>
                            </div>
                            <field name="received"/>
                          </group>
                          <group>
                            <!-- <field name="invoiced"/> -->
                            <!-- <field name="invoice_line_id"/> -->
                          </group>
                        </group>
                      </page>
                      <!-- <page string="History">
                        History
                      </page> -->
                    </notebook>
                  </form>
                  <tree string="Spareparts" editable="bottom">
                    <field name="supply_type"/>
                    <field name="product_id"/>
                    <field name="part_number"/>
                    <field name="product_uom_qty" string="Quantity"/>
                    <field name="product_uom" string="Unit of Measure" groups="uom.group_uom"/>
                    <!-- <field name="location_id"/> -->
                    <field name="received" invisible="1"/>
                  </tree>
                </field>
                <div class="oe_clear"/>
              </page>
              <page string="Operations">
                <field name="fees_lines" attrs="{'readonly':[('state', 'not in', ('confirmed', 'under_repair', 'ready'))]}">
                  <form string="Fees">
                    <group>
                      <field name="product_id"/>
                      <field name="name"/>
                      <field name="fee_code"/>
                      <label for="product_uom_qty"/>
                      <div class="o_row">
                        <field name="product_uom_qty" string="Quantity"/>
                        <field name="product_uom" string="Unit of Measure" groups="uom.group_uom"/>
                      </div>
                      <field name="cost_unit"/>
                      <field name="cost_subtotal" widget="monetary"/>
                    </group>
                  </form>
                  <tree string="Fees" editable="bottom">
                    <field name="product_id" domain="[('type','=','service')]" required="True"/>
                    <field name="fee_code"/>
                    <field name="product_uom_qty" string="Quantity"/>
                    <field name="product_uom" string="Unit of Measure" groups="uom.group_uom"/>
                    <field name="cost_unit"/>
                    <field name="cost_subtotal" widget="monetary"/>
                  </tree>
                </field>
              </page>
              <page string="Others">
                <field name="others_lines" attrs="{'readonly':[('state', 'not in', ('confirmed', 'under_repair', 'ready'))]}">
                  <form string="Others">
                    <group>
                      <field name="product_id" domain="[('type', '=', 'service'), ('categ_id', '=', 6)]"/>
                      <field name="name"/>
                      <field name="other_code"/>
                      <field name="name"/>
                      <label for="product_uom_qty"/>
                      <div class="o_row">
                        <field name="product_uom_qty" string="Quantity"/>
                        <field name="product_uom" string="Unit of Measure" groups="uom.group_uom"/>
                      </div>
                      <field name="cost_unit"/>
                      <field name="cost_subtotal" widget="monetary"/>
                      <field name="vendor_id" domain="[('supplier', '=', True)]"/>
                    </group>
                  </form>
                  <tree string="Others" editable="bottom">
                    <field name="product_id" domain="[('type', '=', 'service'), ('categ_id', '=', 6)]"/>
                    <field name="other_code"/>
                    <field name="product_uom_qty" string="Quantity"/>
                    <field name="product_uom" string="Unit of Measure" groups="uom.group_uom"/>
                    <field name="cost_unit"/>
                    <field name="cost_subtotal" widget="monetary"/>
                    <field name="vendor_id"/>
                  </tree>
                </field>
              </page>
              <page string="Consumables">
                <field name="consumable_lines" attrs="{'readonly':[('state', 'not in', ('confirmed', 'under_repair', 'ready'))]}">
                  <form string="Consumables">
                    <group>
                      <field name="product_id" domain="[('type', '=', 'product'), ('categ_id', '=', 7)]"/>
                      <field name="name"/>
                      <label for="product_uom_qty"/>
                      <div class="o_row">
                        <field name="product_uom_qty" string="Quantity"/>
                        <field name="product_uom" string="Unit of Measure" groups="uom.group_uom"/>
                      </div>
                      <field name="cost_unit"/>
                      <field name="cost_subtotal" widget="monetary"/>
                    </group>
                  </form>
                  <tree string="Consumables" editable="bottom">
                    <field name="product_id" string="Bahan" domain="[('type', '=', 'product'), ('categ_id', '=', 7)]"/>
                    <field name="name" invisible="1"/>
                    <field name="product_uom_qty" string="Quantity"/>
                    <field name="product_uom" string="Unit of Measure" groups="uom.group_uom"/>
                    <field name="cost_unit"/>
                    <field name="cost_subtotal" widget="monetary"/>
                  </tree>
                </field>
              </page>
              <!-- <page string="Extra Info">
              </page> -->
              <page string="Notes">
                <field name="quotation_notes"/>
              </page>
            </notebook>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers"/>
            <field name="activity_ids" widget="mail_activity"/>
            <field name="message_ids" widget="mail_thread"/>
          </div>
        </form>
      </field>
    </record>


    <record id="action_work_order_list" model="ir.actions.act_window">
      <field name="name">Work Order</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">service.order</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <!-- <field name="view_id" ref="view_work_order_tree"/> -->
      <!-- <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">Create Work Order</p>
      </field> -->
    </record>

    <record id="action_work_order_tree" model="ir.actions.act_window.view">
      <field name="sequence" eval="1"/>
      <field name="view_mode">tree</field>
      <field name="view_id" ref="view_work_order_tree"/>
      <field name="act_window_id" ref="action_work_order_list"/>
    </record>

    <record id="action_work_order_form" model="ir.actions.act_window.view">
      <field name="sequence" eval="2"/>
      <field name="view_mode">form</field>
      <field name="view_id" ref="view_work_order_form"/>
      <field name="act_window_id" ref="action_work_order_list"/>
    </record>

    <menuitem id="menu_work_order"
      name="Production" groups="work.group_work_user"/>

    <menuitem id="menu_work_order_list"
      parent="menu_work_order"
      action="action_work_order_list"
      name="Work Order"/>

  </data>
</odoo>
