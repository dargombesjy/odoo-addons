<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="view_work_order_tree" model="ir.ui.view">
      <field name="name">work.tree</field>
      <field name="model">service.order</field>
      <field name="arch" type="xml">
        <tree string="Work Order" decoration-muted="state in ('done','cancel')" decoration-info="state=='draft'">
        <!-- <tree string="Work Order"> -->
          <field name="name"/>
          <field name="claim_reference"/>
          <field name="state"/>
          <field name="work_stage"/>
        </tree>
      </field>
    </record>

    <record id="view_work_order_form" model="ir.ui.view">
      <field name="name">service.form</field>
      <field name="model">service.order</field>
      <field name="priority" eval="1"/>
      <field name="arch" type="xml">
        <form string="Work Order">
          <header>
            <button name="action_service_start" attrs="{'invisible': ['&amp;', ('state', '!=', 'confirmed'), '!', '&amp;', ('state', '=', 'ready'), ('invoice_method', '=', 'b4repair')]}" type="object" string="Start Repair" class="oe_highlight"/>
            <button name="action_service_end" states="under_repair" string="End Repair" type="object" class="oe_highlight"/>
            <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done"/>
          </header>
          <sheet>
            <div class="oe_button_box" name="button_box">
            </div>
            <label for="name"/>
            <h1>
              <field name="name"/>
            </h1>
            <group>
              <group>
                <field name="claim_reference"/>
                <field name="claim_id"/>
                <field name="bill_type"/>
              </group>
              <group>
                <field name="equipment_id"/>
                <field name="partner_id"/>
                <field name="insurance_id" domain="[('is_insurance','=','True')]"/>
                <field name="work_stage"/>
                <field name="invoice_method" invisible="1"/>
              </group>
            </group>
            <notebook>
              <page string="Spareparts">
                <field name="operations">
                  <form string="Sparepartsss">
                    <notebook>
                      <page string="Sparepart Line">
                        <group>
                          <group>
                            <field name="supply_type"/>
                            <field name="product_id"/>
                            <field name="name"/>
                            <label for="product_uom_qty"/>
                            <div class="o_row">
                              <field name="product_uom_qty"/>
                              <field name="product_uom" groups="uom.group_uom"/>
                            </div>
                            <field name="cost_unit"/>
                            <field name="cost_tax_id" widget="many2many_tags" domain="[('type_tax_use','=','purchase')]"/>
                            <field name="cost_subtotal" widget="monetary"/>
                            <field name="received"/>
                          </group>
                          <group>
                            <!-- <field name="invoiced"/> -->
                            <!-- <field name="invoice_line_id"/> -->
                          </group>
                        </group>
                      </page>
                      <!-- <page string="History">
                        History
                      </page> -->
                    </notebook>
                  </form>
                  <tree string="Spareparts" editable="bottom">
                    <field name="supply_type"/>
                    <field name="product_id"/>
                    <field name="name"/>
                    <field name="product_uom_qty" string="Quantity"/>
                    <field name="product_uom" string="Unit of Measure" groups="uom.group_uom"/>
                    <field name="cost_unit"/>
                    <field name="cost_tax_id" widget="many2many_tags" domain="[('type_tax_use','=','purchase')]"/>
                    <field name="cost_subtotal" widget="monetary"/>
                    <field name="received"/>
                  </tree>
                </field>
                <group class="oe_subtotal_footer oe_right">
                  <field name="cost_untaxed" sum="Untaxed-Cost amount"/>
                  <field name="cost_tax"/>
                  <div class="oe_subtotal_footer_separator oe_inline">
                    <label for="cost_total" />
                    <buttom name="button_dummy" string="(update)" type="object" class="oe_edit_only oe_link"/>
                  </div>
                  <field name="cost_total" nolabel="1" sum="Total-Cost amount" class="oe_subtotal_footer_separator"/>
                </group>
                <div class="oe_clear"/>
              </page>
              <page string="Operations">
                <field name="fees_lines">
                  <form string="Fees">
                    <group>
                      <field name="product_id"/>
                      <field name="name"/>
                      <label for="product_uom_qty"/>
                      <div class="o_row">
                        <field name="product_uom_qty" string="Quantity"/>
                        <field name="product_uom" string="Unit of Measure" groups="uom.group_uom"/>
                      </div>
                      <field name="cost_unit"/>
                      <field name="cost_tax_id" widget="many2many_tags" domain="[('type_tax_use','=','purchase')]"/>
                      <field name="cost_subtotal" widget="monetary"/>
                    </group>
                  </form>
                  <tree string="Fees" editable="bottom">
                    <field name="product_id" domain="[('type','=','service')]" required="True"/>
                    <field name="name"/>
                    <field name="product_uom_qty" string="Quantity"/>
                    <field name="product_uom" string="Unit of Measure" groups="uom.group_uom"/>
                    <field name="cost_unit"/>
                    <field name="cost_tax_id" widget="many2many_tags" domain="[('type_tax_use','=','purchase')]"/>
                    <field name="cost_subtotal" widget="monetary"/>
                  </tree>
                </field>
              </page>
              <!-- <page string="Extra Info">
              </page> -->
              <!-- <page string="Notes">
              </page> -->
            </notebook>
          </sheet>
          <div class="oe_chatter">
          </div>
        </form>
      </field>
    </record>


    <record id="action_work_order_list" model="ir.actions.act_window">
      <field name="name">Work Order</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">service.order</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <!-- <field name="view_id" ref="view_work_order_tree"/> -->
      <!-- <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">Create Work Order</p>
      </field> -->
    </record>

    <record id="action_work_order_tree" model="ir.actions.act_window.view">
      <field name="sequence" eval="1"/>
      <field name="view_mode">tree</field>
      <field name="view_id" ref="view_work_order_tree"/>
      <field name="act_window_id" ref="action_work_order_list"/>
    </record>

    <record id="action_work_order_form" model="ir.actions.act_window.view">
      <field name="sequence" eval="2"/>
      <field name="view_mode">form</field>
      <field name="view_id" ref="view_work_order_form"/>
      <field name="act_window_id" ref="action_work_order_list"/>
    </record>

    <menuitem id="menu_work_order"
      name="Production" groups="work.group_work_user"/>

    <menuitem id="menu_work_order_list"
      parent="menu_work_order"
      action="action_work_order_list"
      name="Work Order"/>

  </data>
</odoo>
