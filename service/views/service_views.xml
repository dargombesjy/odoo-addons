<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="view_service_order_tree" model="ir.ui.view">
      <field name="name">service.form</field>
      <field name="model">service.order</field>
      <field name="arch" type="xml">
        <tree string="Service Order">
          <field name="name"/>
          <field name="register_date"/>
          <field name="claim_reference"/>
          <field name="equipment_id"/>
          <field name="insurance_id"/>
          <field name="claim_id"/>
          <field name="state"/>
          <field name="planned_date"/>
        </tree>
      </field>
    </record>

    <record id="view_service_order_form" model="ir.ui.view">
      <field name="name">service.form</field>
      <field name="model">service.order</field>
      <field name="priority" eval="1"/>
      <field name="arch" type="xml">
        <form string="Service Order">
          <header>
            <button name="action_send_mail" states="draft" string="Send Quotation" type="object"/>
            <button name="action_print_service_order" states="draft" string="Print Quotation" type="object"/>
            <button name="action_service_confirm" states="draft" string="Confirm Service" type="object" class="oe_highlight"/>
            <button name="action_service_cancel_draft" states="cancel" string="Set to Draft" type="object"/>
            <button name="action_service_invoice_create" states="2binvoiced" type="object" string="Create Invoice" class="oe_highlight" groups="account.group_account_invoice"/>
            <button name="action_service_cancel" string="Cancel Repair" type="object" attrs="{'invisible':[('state', 'not in',('confirmed','2binvoiced','ready','under_repair'))]}"/>
            <!-- <button name="action_service_cancel" string="Cancel Repair" type="object" attrs="{'invisible':['|',('invoice_method','!=','none'), ('state', 'not in',('confirmed','2binvoiced','ready','under_repair'))]}"/> -->
            <button name="action_service_cancel" states="draft" type="object" string="Cancel Repair"/>
            <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done"/>
          </header>
          <sheet>
            <div class="oe_button_box" name="button_box">
            </div>
            <label for="name"/>
            <h1>
              <field name="name"/>
            </h1>
            <group>
              <group>
                <field name="bill_type"/>
                <field name="claim_reference"/>
                <field name="claim_id"/>
                <field name="policy_no"/>
                <field name="insurance_id" domain="[('partner_type','=','insurance')]"/>
                <field name="partner_id"/>
                <field name="address_id"/>
              </group>
              <group>
                <field name="register_date"/>
                <field name="planned_date"/>
                <field name="equipment_id"/>
                <field name="make"/>
                <field name="model"/>
                <field name="manuf_year"/>
                <field name="chassis_no"/>
                <field name="engine_no"/>
                <field name="base_colour"/>
                <!-- <field name="partner_invoice_id"/> -->
                <!-- <field name="invoice_method"/> -->
              </group>
            </group>
            <notebook>
              <page string="Spareparts">
                <field name="operations">
                  <form string="Spareparts">
                    <notebook>
                      <page string="Sparepart Line">
                        <group>
                          <group>
                            <field name="product_id" domain="[('type', 'in', ['product', 'consu'])]"/>
                            <field name="part_number"/>
                            <label for="product_uom_qty"/>
                            <div class="o_row">
                              <field name="product_uom_qty"/>
                              <field name="product_uom" groups="uom.group_uom"/>
                            </div>
                            <field name="supply_type" invisible="1"/>
                            <field name="price_unit"/>
                            <field name="price_accepted"/>
                            <field name="tax_id" widget="many2many_tags" domain="[('type_tax_use','=','sale')]"/>
                            <field name="price_subtotal" widget="monetary"/>
                          </group>
                          <group>
                            <field name="invoiced"/>
                            <field name="invoice_line_id"/>
                          </group>
                        </group>
                      </page>
                      <!-- <page string="History">
                        History
                      </page> -->
                    </notebook>
                  </form>
                  <tree string="Spareparts" editable="bottom">
                    <field name="supply_type"/>
                    <field name="product_id" domain="[('type', 'in', ['product', 'consu'])]"/>
                    <field name="part_number"/>
                    <field name="product_uom_qty" string="Quantity"/>
                    <field name="product_uom" string="Unit of Measure" groups="uom.group_uom"/>
                    <field name="price_unit"/>
                    <field name="price_accepted"/>
                    <field name="tax_id" widget="many2many_tags" domain="[('type_tax_use','=','sale')]"/>
                    <field name="price_subtotal" widget="monetary"/>
                  </tree>
                </field>
                <group class="oe_subtotal_footer oe_right">
                  <field name="amount_untaxed" sum="Untaxed amount"/>
                  <field name="amount_tax"/>
                  <div class="oe_subtotal_footer_separator oe_inline">
                    <label for="amount_total" />
                    <button name="button_dummy" string="(update)" states="draft" type="object" class="oe_edit_only oe_link"/>
                  </div>
                  <field name="amount_total" nolabel="1" sum="Total amount" class="oe_subtotal_footer_separator"/>
                </group>
                <div class="oe_clear"/>
              </page>
              <page string="Operations">
                <field name="fees_lines">
                  <form string="Fees">
                    <group>
                      <field name="product_id" domain="[('type', '=', 'service')]"/>
                      <field name="fee_code"/>
                      <label for="product_uom_qty"/>
                      <div class="o_row">
                        <field name="product_uom_qty" string="Quantity"/>
                        <field name="product_uom" string="Unit of Measure" groups="uom.group_uom"/>
                      </div>
                      <field name="price_unit"/>
                      <field name="tax_id" widget="many2many_tags" domain="[('type_tax_use','=','sale')]"/>
                      <field name="price_subtotal" widget="monetary"/>
                    </group>
                  </form>
                  <tree string="Fees" editable="bottom">
                    <field name="product_id" domain="[('type', '=', 'service')]" required="True"/>
                    <field name="fee_code"/>
                    <field name="product_uom_qty" string="Quantity"/>
                    <field name="product_uom" string="Unit of Measure" groups="uom.group_uom"/>
                    <field name="price_unit"/>
                    <field name="price_accepted"/>
                    <field name="tax_id" widget="many2many_tags" domain="[('type_tax_use','=','sale')]"/>
                    <field name="price_subtotal" widget="monetary"/>
                  </tree>
                </field>
              </page>
              <page string="Others">
                <field name="others_lines">
                  <form string="Others">
                    <group>
                      <field name="product_id" domain="[('type', '=', 'service')]"/>
                      <field name="other_code"/>
                      <label for="product_uom_qty"/>
                      <div class="o_row">
                        <field name="product_uom_qty" string="Quantity"/>
                        <field name="product_uom" string="Unit of Measure" groups="uom.group_uom"/>
                      </div>
                      <field name="price_unit"/>
                      <field name="price_accepted"/>
                      <field name="tax_id" widget="many2many_tags" domain="[('type_tax_use','=','sale')]"/>
                      <field name="price_subtotal" widget="monetary"/>
                    </group>
                  </form>
                  <tree string="Others" editable="bottom">
                    <field name="product_id" domain="[('type', '=', 'service')]" required="True"/>
                    <field name="other_code"/>
                    <field name="product_uom_qty" string="Quantity"/>
                    <field name="product_uom" string="Unit of Measure" groups="uom.group_uom"/>
                    <field name="price_unit"/>
                    <field name="price_accepted"/>
                    <field name="tax_id" widget="many2many_tags" domain="[('type_tax_use','=','sale')]"/>
                    <field name="price_subtotal" widget="monetary"/>
                  </tree>
                </field>
              </page>
              <!-- <page string="Extra Info">
              </page> -->
              <page string="Notes">
                <field name="quotation_notes" placeholder="Add quotation notes..."/>
              </page>
            </notebook>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers"/>
            <field name="activity_ids" widget="mail_activity"/>
            <field name="message_ids" widget="mail_thread"/>
          </div>
        </form>
      </field>
    </record>

    <record id="action_service_order_tree" model="ir.actions.act_window">
      <field name="name">Service Order</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">service.order</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,kanban,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">Create Service Order</p>
      </field>
    </record>

    <menuitem id="menu_service_order"
      name="Service" sequence="36" groups="service.group_service_user"/>

    <menuitem id="menu_service_order_form"
      parent="menu_service_order"
      action="action_service_order_tree"
      name="Services"/>
  </data>
</odoo>
